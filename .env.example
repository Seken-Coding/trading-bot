# Enhanced Trading Bot Configuration
# Copy this file to .env and update with your values

# Trading Configuration
WATCHLIST=AMD,NVDA,AAPL,MSFT,GOOGL,TSLA
DRY_RUN=true
RISK_PER_TRADE=0.01
CHECK_INTERVAL_SECONDS=300
MAX_POSITIONS_PER_STOCK=1
MAX_TOTAL_POSITIONS=5
DAILY_LOSS_LIMIT=0.05

# Alpaca Trading API
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Discord Webhook Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here
DISCORD_NOTIFY_PURCHASES=true
DISCORD_NOTIFY_CHANGES=true
DISCORD_NOTIFY_DAILY=true
DISCORD_NOTIFY_STATUS=true
DISCORD_NOTIFY_RECOMMENDATIONS=true

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_bot
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=your_secure_password_here

# For database setup only
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=your_admin_password_here

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080

# Technical Analysis Parameters
LOOKBACK_PERIOD=30
FIB_TOLERANCE=0.006
RSI_OVERBOUGHT=70
MIN_VOLUME_RATIO=0.5
REQUIRE_SMA50=true

# Risk Management
TAKE_PROFIT_MULTIPLIER=1.5
STOP_LOSS_BUFFER=0.002
MAX_CONSECUTIVE_ERRORS=5
SIGNAL_VALIDATION_DRIFT=0.01
